{
  "manifest_version": 2,
  "name": "SoundCloud Player",
  "short_name": "SC Player",
  "description": "SoundCloud Popup Player ðŸ”¥ (UNOFFICIAL!)",
  "version": "1.5.1",
  "homepage_url": "https://akiba.cloud/soundcloud-player/",
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background/bg.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "contents/contents.js",
        "contents/utils.js"
      ],
      "matches": [
        "*://soundcloud.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "open": {
      "description": "Open the SoundCloud tab"
    },
    "toggle": {
      "description": "Play or pause"
    },
    "prev": {
      "description": "Play previous track"
    },
    "next": {
      "description": "Play next track"
    },
    "fav": {
      "description": "Like"
    },
    "repeat": {
      "description": "Repeat"
    },
    "shuffle": {
      "description": "Shuffle"
    },
    "mute": {
      "description": "Mute"
    },
    "up": {
      "description": "Increase volume"
    },
    "down": {
      "description": "Decrease volume"
    },
    "seekb": {
      "description": "Seek backward"
    },
    "seekf": {
      "description": "Seek forward"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "windows": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "Open the popup"
    }
  }
}
