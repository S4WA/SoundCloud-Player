{
  "manifest_version": 2,
  "name": "SoundCloud Player",
  "short_name": "SC Player",
  "description": "SoundCloud Popup Player ðŸ”¥",
  "version": "1.3.6.3",
  "homepage_url": "https://akiba.cloud/soundcloud-player/",
  "permissions": [
    "tabs",
    "clipboardRead"
  ],
  "content_scripts": [ {
    "all_frames": true,
    "js": [
      "browser-polyfill.min.js",
      "jquery-3.4.1.min.js",
      "contents/contents.js",
      "contents/utils.js"
    ],
    "matches": [
      "*://soundcloud.com/*"
    ],
    "run_at": "document_end"
  } ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      },
      "description": "Open the popup"
    }
  }
}